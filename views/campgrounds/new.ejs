<% include ../partials/header %>

<h1 style="text-align: center;">Add New Campground!</h1>
<div style="width: 30%; margin: 25px auto">
    <form method="post" action="/campgrounds">
        <div class="form-group">
            <input class="form-control" type="text" name="name" placeholder="Campground name">    
        </div>
        
        <div class="form-group">
            <input class="form-control" type="text" name="imageURL" placeholder="Image URL">    
        </div>
        
        <div class="form-group">
            <input class="form-control" type="text" name="description" placeholder="Campground description">
        </div>
        
        <div class="form-group">
            <button class="btn btn-default btn-lg btn-primary btn-block" type="submit">Submit!</button>
        </div>
    </form>
    <a href="/campgrounds">Go Back</a>
</div>

<% include ../partials/footer %>