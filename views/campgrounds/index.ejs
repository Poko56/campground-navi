<% include ../partials/header.ejs %>

<header class="jumbotron">
    <div class="container">
        <h1>Welcome to Campground Navi!</h1>
        <p>View our hand-picked campground from all over the world!</p>
        <p>
            <a href="/campgrounds/new" class="btn btn-primary btn-large">Add new campground</a>
        </p>
    </div>
</header>

<div class="container">
    <div class="row" style="display: flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campground) { %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= campground.image %>" alt="<%= campground.name %>">    
                    <div class="caption">
                        <h4><%= campground.name %></h4>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>

            </div>
        <% }); %>
    </div>

<% include ../partials/footer.ejs %>